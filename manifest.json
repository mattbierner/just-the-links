{
    "manifest_version": 2,

    "name": "Just the Links",
    "description": "",
    "homepage_url": "http://mattbierner.com",
    "version": "1.0",
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png" },
    "permissions": ["activeTab", "storage"],

    "browser_action": {
        "icons": ["icon.png"],
        "default_icon": {
            "19": "icon19.png",
            "38": "icon38.png"
        },
        "default_popup": "popup/popup.html"
    },
    
    "options_ui": {
        "page": "options/options.html",
        "chrome_style": true
    },
    
    "background": {
        "scripts": [
            "js/defaults.js",  
            "eventPage.js"],
        "persistent": false
    },
    
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*"],
        "js": [
            "js/jquery.min.js",
            "js/defaults.js",
            "contentScript/contentScript.js" ],
        "css": [
            "contentScript/contentScript.css"],
        "run_at": "document_end"
    }]
}